{
  "allowed_paths": [
    "src/ctrlr/**",
    "tests/**",
    "pyproject.toml",
    "README.md"
  ],
  "area": "ctrlr",
  "base_ref": "main",
  "branch": "packet-ctrlr-05-otel",
  "budgets": {
    "max_changed_files": 20,
    "max_changed_lines": 900
  },
  "evidence": {
    "include_git_diff_patch": false,
    "out_dir": ".codex/out"
  },
  "forbidden_outputs": [
    "dist/**",
    "build/**",
    "*.egg-info/**",
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/.ruff_cache/**",
    "**/.mypy_cache/**"
  ],
  "github_ops_required": false,
  "network_policy": {
    "additional_domains": [
      "github.com",
      "api.github.com",
      "raw.githubusercontent.com",
      "objects.githubusercontent.com",
      "githubusercontent.com",
      "git-scm.com"
    ],
    "allowed_http_methods": [
      "GET",
      "POST",
      "PUT",
      "PATCH",
      "DELETE"
    ],
    "domain_allowlist_preset": "none",
    "internet_access": "on"
  },
  "packet_id": "packet-ctrlr-05-otel",
  "repo": "ctrlr",
  "run": {
    "commands": [],
    "regen_cmd": "",
    "test_cmd": "uv run pytest -q"
  },
  "worktree_policy": {
    "allow_dirty_globs": [
      "out/**",
      ".codex/out/**"
    ],
    "allow_untracked_globs": [
      "out/**",
      ".codex/out/**"
    ],
    "deny_if_worktree_exists": true,
    "mode": "strict",
    "worktree_root": ".codex/.worktrees"
  }
}
